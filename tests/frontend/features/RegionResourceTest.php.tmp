<?php

declare(strict_types=1);

namespace Tests\Feature\Filament;

use App\Models\Region;
use Illuminate\Foundation\Testing\RefreshDatabase;
use Tests\TestCase;

final class RegionResourceTest extends TestCase
{
    use RefreshDatabase;

    public function test_region_list_page_renders(): void
    {
        Region::factory()->count(5)->create();

        $response = $this->get(route('filament.admin.resources.regions.index'));

        $response->assertOk();
    }

    public function test_region_create_page_renders(): void
    {
        $response = $this->get(route('filament.admin.resources.regions.create'));

        $response->assertOk();
    }
}
