<?php

declare(strict_types=1);

namespace Tests\Feature;

use Illuminate\Foundation\Testing\RefreshDatabase;
use Tests\TestCase;

/**
 * Test Runner
 *
 * Centralized test runner for executing tests by groups
 */
class TestRunner extends TestCase
{
    use RefreshDatabase;

    /**
     * Run all admin resource tests
     */
    public function test_admin_resources(): void
    {
        $this->artisan('test', [
            '--filter' => 'Tests\\Feature\\Admin',
            '--stop-on-failure' => true,
        ])->assertExitCode(0);
    }

    /**
     * Run all widget tests
     */
    public function test_widgets(): void
    {
