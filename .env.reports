# Advanced Reports System Configuration
# Copy these settings to your .env file and adjust as needed

# Cache Configuration
REPORTS_CACHE_ENABLED=true
REPORTS_CACHE_TTL=3600

# Performance Settings
REPORTS_MAX_RECORDS=10000
REPORTS_QUERY_TIMEOUT=30
REPORTS_MEMORY_LIMIT=512M
REPORTS_MAX_EXPORT=50000

# Widget Configuration
REPORTS_WIDGET_REFRESH=30
REPORTS_LAZY_LOADING=true
REPORTS_POLLING_ENABLED=true

# Security Settings
REPORTS_RATE_LIMIT_ENABLED=true
REPORTS_MAX_REQUESTS=60
REPORTS_RATE_LIMIT_WINDOW=1
REPORTS_IP_WHITELIST=""

# Notification Settings
REPORTS_SLOW_QUERY_THRESHOLD=5
REPORTS_ERROR_EMAIL=""
REPORTS_DAILY_SUMMARY=false

# Database Settings
REPORTS_DB_CONNECTION=sqlite
REPORTS_CHUNK_SIZE=1000
REPORTS_USE_READ_REPLICA=false

# Localization Settings
REPORTS_DEFAULT_LOCALE=lt
REPORTS_CURRENCY=EUR
REPORTS_TIMEZONE=Europe/Vilnius
